package com.rays.test;

import static org.junit.Assert.assertNotNull;

import org.junit.Test;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.context.SpringBootTest;

import com.rays.dto.UserDTO;
import com.rays.service.UserService;

@SpringBootTest
public class TestUserService {

	@Autowired
	private UserService userService;

	@Test
	public void testAdd() {

		UserDTO dto = new UserDTO();
		dto.setId(1);
		dto.setFirstName("abc");
		dto.setLastName("xyz");
		dto.setLoginId("abc@gmail.com");
		dto.setPassword("1234");

		long result = userService.add(dto);

		dto = userService.get(result);

		assertNotNull("data added", dto);
	}

	/*
	 * @Test public void testUpdate() { UserDTO dto = new UserDTO();
	 * userService.update(dto); }
	 * 
	 * @Test public void testDelete() { userService.delete(1L); }
	 */
}
